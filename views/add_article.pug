extends partials/header

block content
  .container    
    br
    h1 #{title}
    br
    form(method='POST', action='/articles/add')
      #form-group
        input.form-control.article-title(name='title', type='text', placeholder='Untitled Article')
        br
      #form-group
        .meta-header
          select#dynamic-resizing(name='doctrine')
            option Soteriology
            option Trinity
            option Miracles
            option Soul-winning
          select#select-width(style='display:none')
            option#option-width
          input(name='scripture', placeholder="Add scripture..." type='text')
        textarea.form-control(name='editor1')
        br
      #form-group
        label Series:
        select.form-control(name='series', type='text')
          option Evangalism Techniques
          option How To Be Saved
          option Nature of God
          option Faith Healing
        br
      #form-group
        label Abstract:
        textarea.form-control(name='abstract', type='text')
      br
      input.btn.btn-primary(type='submit',value='Submit')
  script(src='https://cdn.ckeditor.com/4.11.1/standard/ckeditor.js')
  script.
    CKEDITOR.replace( 'editor1' );
  include partials/footer
